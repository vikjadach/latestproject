<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="latestproject.MainPage"
             Shell.NavBarIsVisible="false">


   <Grid>
      <HorizontalStackLayout x:Name="primeiraimg">
         <Image Source="sol.png"
                Aspect="Fill"/>

         <Image Source="sol.png"
                Aspect="Fill"/>

         <Image Source="sol.png"
                Aspect="Fill"/>

      </HorizontalStackLayout>

      <HorizontalStackLayout x:Name="segundaimg">
         <Image Source="fundolaranja.png"
                Aspect="Fill"/>

         <Image Source="fundolaranja.png"
                Aspect="Fill"/>

         <Image Source="fundolaranja.png"
                Aspect="Fill"/>

      </HorizontalStackLayout>

      <HorizontalStackLayout x:Name="terceiraimg">
         <Image Source="montanhas.png"    
